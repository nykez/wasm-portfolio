@page "/"


<main>
    <div class="px-4 py-5 my-5 text-center">
        <img class="circle d-block mx-auto mb-4 animate__animated animate__fadeInDown" src="{{person.avatarUrl}}" alt="avatar">
        <h1 class="display-5 fw-bold animate__animated animate__fadeInDown">{{person.name}}</h1>

        <h2 [@valueChanged]="currentTitle" class="display-10 fw-light mb-4 animate__animated animate__fadeInUp">{{currentTitle}}</h2>

        <div class="col-lg-6 mx-auto">
            <!-- <p class="lead mb-4">Quickly design and customize responsive mobile-first sites with Bootstrap, the world’s most popular front-end open source toolkit, featuring Sass variables and mixins, responsive grid system, extensive prebuilt components, and powerful JavaScript plugins.</p> -->
            <div class="d-grid gap-4 d-sm-flex justify-content-sm-center animate__animated animate__bounceInLeft">

                <a href="{{link.url}}" target="_blank" *ngFor="let link of person.socialLinks">
                    <i class="{{link.style}}"></i>
                </a>

            </div>

            <div class="card p-4 mt-5 animate__animated animate__bounceInRight">
                <p class="mb-0">{{ person.aboutMe }}</p>
            </div>
        </div>
    </div>
</main>